integrations = "bash -c 'docker compose -f tests/integrations/docker-compose.yml up -d dynamodb-local >/dev/null; cleanup() { docker compose -f tests/integrations/docker-compose.yml down >/dev/null; }; trap cleanup EXIT INT TERM; AWS_ACCESS_KEY_ID=test AWS_SECRET_ACCESS_KEY=test AWS_DEFAULT_REGION=us-east-2 pytest tests/integration'"
